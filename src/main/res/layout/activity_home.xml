<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView2"
        android:layout_width="286dp"
        android:layout_height="259dp"
        android:layout_marginBottom="160dp"
        android:rotation="90"
        android:src="@drawable/pusheen_scribble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />

    <ImageView
        android:id="@+id/smallholebackground"
        android:layout_width="1200dp"
        android:layout_height="0dp"
        android:scaleType="center"
        android:scaleX="1.25"
        android:scaleY="1.25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cat_background_seamless_extra_large_hole" />

    <Button
        android:id="@+id/new_test_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="243dp"
        android:layout_height="67dp"
        android:layout_marginBottom="68dp"
        android:width="225dp"
        android:backgroundTint="#e57373"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@android:color/white"
        android:scaleX="1"
        android:shadowColor="#000000"
        android:shadowDx="350"
        android:text="New Test"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#F44336"
        android:textColorLink="#F44336"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/smallholebackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView2"
        app:layout_constraintVertical_bias="0.804" />


</androidx.constraintlayout.widget.ConstraintLayout>